<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_black"
    android:layout_height="match_parent"
    tools:context="com.horizam.ezlinq.activities.ForgetPasswordOtpActivity">
    <ImageView
        android:id="@+id/iv_tikl_forget_pass_email"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"/>
    <TextView
        android:id="@+id/tv_enter_six_digit_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Str_six_digit_code"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/iv_tikl_forget_pass_email"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/color_text"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_enter_your_popl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_reset_password_email_has_been_nsent_if_you_dont_t_see_it_check_spam"
        android:textAlignment="center"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/color_text"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_six_digit_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        app:height="@dimen/_40sdp"
        app:width="@dimen/_40sdp"
        app:bar_height="2dp"
        app:otp_box_background="@color/grey_500"
        app:length="6"
        app:otp_text_size="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_your_popl"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send_code_forget_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:backgroundTint="@color/app_color"
        android:fontFamily="@font/roboto_bold"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="@string/str_reset_password"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otp_forget_pass" />
    <TextView
        android:id="@+id/tv_back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_back_to_login"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/roboto_light"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColor="@color/color_text"
        app:layout_constraintTop_toBottomOf="@id/btn_send_code_forget_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>