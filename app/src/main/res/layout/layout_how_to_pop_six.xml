<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_black">
    <ImageView
        android:id="@+id/civ_close_screen_six"
        android:elevation="@dimen/_5sdp"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="36dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_cross"
        android:src="@drawable/ic_close_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
      android:id="@+id/iv_gif"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_200sdp"
      android:src="@drawable/ic_logo"
        android:layout_marginTop="@dimen/_10sdp"
      app:layout_constraintTop_toBottomOf="@+id/civ_close_screen_six"
      app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="@dimen/_22sdp"
        app:cardCornerRadius="@dimen/_22sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_gif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
          android:padding="@dimen/_5sdp"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
            android:background="@color/color_black">
          <TextView
              android:id="@+id/tv_heading_how_to_pop"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_10sdp"
              android:text="@string/let_s_get_tikin"
              android:textColor="@color/color_text"
              android:textSize="@dimen/_20ssp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />
          <ImageView
              android:id="@+id/civ_one"
              android:layout_marginLeft="@dimen/_8sdp"
              android:layout_marginTop="@dimen/_20sdp"
              android:layout_width="@dimen/_25sdp"
              android:layout_height="@dimen/_25sdp"
              android:src="@drawable/img_number_one"
              app:layout_constraintTop_toBottomOf="@+id/tv_heading_how_to_pop"
              app:layout_constraintStart_toStartOf="parent"/>
          <TextView
              android:id="@+id/tv_with_civ_one"
              android:layout_width="@dimen/_200sdp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_3sdp"
              android:layout_marginTop="@dimen/_18sdp"
              android:textColor="@color/color_text"
              android:text="@string/your_pop_count_is_the_number_of_times_you_share_with_tikl"
              android:textSize="@dimen/_14ssp"
              app:layout_constraintStart_toEndOf="@+id/civ_one"
              app:layout_constraintTop_toBottomOf="@+id/tv_heading_how_to_pop" />
          <ImageView
              android:id="@+id/civ_two"
              android:layout_width="@dimen/_25sdp"
              android:layout_height="@dimen/_25sdp"
              android:layout_marginLeft="@dimen/_8sdp"
              android:src="@drawable/img_number_two"
              app:layout_constraintTop_toTopOf="@+id/tv_with_civ_two"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="@id/tv_with_civ_two"
              app:layout_constraintEnd_toStartOf="@+id/tv_with_civ_two"/>
          <TextView
              android:id="@+id/tv_with_civ_two"
              android:layout_width="@dimen/_200sdp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/_3sdp"
              android:layout_marginTop="@dimen/_20sdp"
              android:text="@string/build_your_pop_streak_and_pop_count_to_grow_your_network_and_hit_new_pop_levels"
              android:textSize="@dimen/_14ssp"
              android:textColor="@color/color_text"
              app:layout_constraintStart_toEndOf="@+id/civ_two"
              app:layout_constraintTop_toBottomOf="@+id/tv_with_civ_one" />
          <androidx.cardview.widget.CardView
              android:id="@+id/btn_directed_profie1"
              android:background="@color/grey"
              android:layout_width="@dimen/_240sdp"
              android:layout_height="wrap_content"
              app:cardCornerRadius="@dimen/_8sdp"
              android:layout_marginBottom="@dimen/_10sdp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@id/tv_with_civ_two"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="@dimen/_15sdp">
              <TextView
                  android:id="@+id/tv_continue_layout_one"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/app_color"
                  android:gravity="center"
                  android:padding="@dimen/_5sdp"
                  android:text="@string/go_to_activate"
                  android:textColor="@color/white"
                  android:textSize="@dimen/_16ssp" />
          </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>